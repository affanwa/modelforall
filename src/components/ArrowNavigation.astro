---
import { getCollection } from "astro:content";

const pages = await getCollection("pages");

// Find the current page index in the collection
const { slug } = Astro.props;
const currentIndex = pages.findIndex((page) => page.slug === slug);

// Determine the next and previous pages
const prevPage = currentIndex > 0 ? pages[currentIndex - 1] : null;
const nextPage = currentIndex < pages.length - 1 ? pages[currentIndex + 1] : null;
---

<div class="navigation-buttons">
  {prevPage && (
    <a href={`/${prevPage.slug}/`} class="arrow-button" aria-label="Previous Page">◀</a>
  )}
  {nextPage && (
    <a href={`/${nextPage.slug}/`} class="arrow-button" aria-label="Next Page">▶</a>
  )}
</div>

<style>
.navigation-buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
}

.arrow-button {
  font-size: 2rem;
  background: none;
  border: none;
  text-decoration: none;
  cursor: pointer;
  color: #333;
  transition: transform 0.2s, color 0.2s;
}

.arrow-button:hover {
  transform: scale(1.2);
  color: #555;
}
</style>
